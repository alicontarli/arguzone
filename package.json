{
  "name": "arguzone-beta",
  "private": true,
  "version": "0.0.1",
  "description": "ArguZone Beta Surumu",
  "author": "ArguZone Team",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.arguzone.beta",
    "productName": "ArguZone Beta",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "asar": true
  },
  "dependencies": {
    "firebase": "^11.0.2",
    "peerjs": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^9.2.1",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "vite": "^6.0.1"
  }
}
